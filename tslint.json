{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [100]
    },
    "arrow-parens": [true, "ban-single-arg-parens"],
    "no-consecutive-blank-lines": false,
    "quotemark": [true, "single", "avoid-escape", "jsx-double"],
    "semicolon": [true, "never"],
    "variable-name": [true, "allow-pascal-case"]
  }
}
